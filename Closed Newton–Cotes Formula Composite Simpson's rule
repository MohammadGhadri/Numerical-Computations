\\ Closed Newtonâ€“Cotes Formulas for numerical integration

#include "stdafx.h"
#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	float a/*=0*/, b/*=1*/, h, x, sum = 0;
	int n;
	cout << "Enter first Number;" << endl;
	cin >> a;
	cout << "Enter second Number;" << endl;
	cin >> b;
	cout << "Enter An Even Number;" << endl;
	cin >> n;
	while (n % 2 == 1) {
		cout << "Please,Enter An <<Even>> Number;" << endl;
		cin >> n;
	}
	h = (b - a) / n;
	for (int i = 0; i <= n; i++) {
		x = a + (i*h);
		if (i > 0 && i < n) {
			if (i % 2 == 0) {
				sum += (h / 3)*(2 * (1 + exp(-x)*sin(4 * x)));
			}
			else {
				sum += (h / 3)*(4 * (1 + exp(-x)*sin(4 * x)));
			}
		}
		else if (i == 0) {
			sum += (h / 3)*((1 + exp(-a)*sin(4 * a)));
		}
		else {
			sum += (h / 3)*((1 + exp(-a)*sin(4 * a)));
		}
	}
	cout << sum << endl;
	return 0;
}
